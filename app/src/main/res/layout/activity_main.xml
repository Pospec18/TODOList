<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="@color/bg_200">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <Button
                android:text="Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/button4"
                android:backgroundTint="@color/blue_700"/>
        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_weight="1">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="vertical" android:id="@+id/list">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:background="@color/red_500">
                    <TextView
                            android:text="TextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/name" android:layout_weight="10"
                            style="@style/text" android:fontFamily="serif-monospace"/>
                    <TextView
                            android:text="5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/ideal_count"
                            android:layout_weight="1"
                            android:textColor="@color/white"/>
                    <TextView
                            android:text="0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/curr_count"
                            android:layout_weight="1" android:background="@color/red_700"
                            android:textColor="@color/white"/>
                    <Button
                            android:text="+"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/button7" android:layout_weight="1"/>
                    <Button
                            android:text="edit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/button8" android:layout_weight="1"
                            style="@style/item_button"/>
                    <Button
                            android:text="skip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/button9" android:layout_weight="0"
                            style="@style/item_button"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:background="@color/blue_700">
            <Button
                    android:text="add"
                    android:id="@+id/add"
                    style="@style/bottom_panel_button"/>
            <Button
                    android:text="done"
                    android:id="@+id/done"
                    style="@style/bottom_panel_button"/>
            <Button
                    android:text="filter"
                    android:id="@+id/filter"
                    style="@style/bottom_panel_button"/>
            <Button
                    android:text="setting"
                    android:id="@+id/settings"
                    style="@style/bottom_panel_button"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>