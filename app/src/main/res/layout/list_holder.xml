<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                android:layout_height="wrap_content" android:background="@drawable/item_background"
                android:layout_marginVertical="4dp"
                android:padding="0dp"
                android:minHeight="64dp" android:gravity="center"
                tools:context="com.pospecstudio.todolist.ui.ListViewHolder">

    <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="100"
              android:id="@+id/name_text" style="@style/text" android:ellipsize="end" android:maxLines="1"
              android:layout_marginStart="16dp" android:textAlignment="textStart"/>

    <ImageButton android:background="@drawable/button_background" android:backgroundTint="@color/white"
                 android:src="@drawable/ic_icon_settings"
                 android:id="@+id/close_button" style="@style/item_value"
                 android:contentDescription="@string/edit_item" android:minWidth="48dp"/>

</LinearLayout>